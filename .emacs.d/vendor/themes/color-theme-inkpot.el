 (require 'color-theme)
    (defun color-theme-inkpot ()
      "Color theme based on the Inkpot theme. Ported and tweaked by Per Vognsen. More tweaking by Andrew Ellis"
      (interactive)
      (color-theme-install
       '(color-theme-inkpot
         ((foreground-color . "#cfbfad")
          (background-color . "#1e1e27")
          (border-color . "#3e3e5e")
          (cursor-color . "red")
          (background-mode . dark))
	 (comint-highlight-prompt ((t (:foreground "light blue"))))
	 (paren-face-match ((t (:background "steelblue"))))
	 (paren-face-mismatch ((t (:background "purple" :foreground "white"))))
	 (paren-face-no-match ((t (:background "yellow" :foreground "black"))))
         (region ((t (:background "#610d00"))))
         (highlight ((t (:background "#404040"))))
	 (lazy-highlight ((t (:background "#005bd4"))))
         (fringe ((t (:background "#16161b"))))
         (show-paren-match-face ((t (:background "orangered2")))) ; original inkpot: #606060
         (isearch ((t (:bold t :foreground "#303030" :background "#cd8b60"))))
	 (sense-region-offset-face ((t (:background "lightgoldenrod2"))))
	 (sense-region-rectangle-face ((t (:background "lightgoldenrod2"))))
	 (sense-region-region-face ((t (:background "lightgoldenrod2"))))
	 (sense-region-selection-base-face ((t (:background "#666688"))))
	 (sense-region-selection-highlight-face ((t (:background "darkseagreen2"))))
         (modeline ((t (:bold t :foreground "#b9b9b9" :background "#3e3e5e"))))
         (modeline-inactive ((t (:foreground "#708090" :background "#3e3e5e"))))
         (modeline-buffer-id ((t (:bold t :foreground "#b9b9b9" :background "#3e3e5e"))))
         (minibuffer-prompt ((t (:bold t :foreground "#708090"))))
	 (hl-line ((t (:background "#141423"))))
         (font-lock-builtin-face ((t (:foreground "#c080d0"))))
	 (font-lock-comment-delimiter-face ((t (:italic t :foreground "#708090" :background "1e1e27"))))
         (font-lock-comment-face ((t (:italic t :foreground "#708090")))) ; original inkpot: #cd8b00
         (font-lock-constant-face ((t (:foreground "#506dbd"))))
         (font-lock-doc-face ((t (:foreground "#cd8b00"))))
         (font-lock-function-name-face ((t (:foreground "#87cefa"))))
         (font-lock-keyword-face ((t (:bold t :foreground "#c080d0"))))
	 (font-latex-math-face ((t (:foreground "burlywood"))))
	 (font-latex-sectioning-0-face ((t (:bold t :family "helv" :weight bold :foreground "goldenrod" :height 1.6105100000000008))))
	 (font-latex-sectioning-1-face ((t (:bold t :foreground "goldenrod" :weight bold :family "helv" :height 1.4641000000000006))))
	 (font-latex-sectioning-2-face ((t (:bold t :family "helv" :weight bold :foreground "goldenrod" :height 1.3310000000000004))))
	 (font-latex-sectioning-3-face ((t (:bold t :foreground "goldenrod" :weight bold :family "helv" :height 1.2100000000000002))))
	 (font-latex-sectioning-4-face ((t (:bold t :family "helv" :weight bold :foreground "goldenrod" :height 1.1))))
	 (font-latex-sectioning-5-face ((t (:bold t :foreground "goldenrod" :weight bold :family "helv"))))
	 (font-latex-sedate-face ((t (:foreground "#b15161"))))
	 (font-latex-subscript-face ((t (:height 0.8))))
	 (font-latex-superscript-face ((t (:height 0.8))))
	 (font-latex-verbatim-face ((t (:family "courier" :foreground "burlywood"))))
	 (font-lock-preprocessor-face ((t (:foreground "309090"))))
         (font-lock-reference-face ((t (:bold t :foreground "#808bed"))))
         (font-lock-string-face ((t (:foreground "#ffcd8b" :background "#404040"))))
         (font-lock-type-face ((t (:foreground "#ff8bff"))))
         (font-lock-variable-name-face ((t nil)))
         (font-lock-warning-face ((t (:foreground "#ffffff" :background "#ff0000")))))))

(provide 'color-theme-inkpot)
